@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="mb-2">
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create new</a>
</div>
@if (!Model.Any())
{
    <div class="alert-warning w-100 rounded-2">
        <p class="m-2">No categories added yet</p>
    </div>
}
else
{
    <table class="table table-hover table-bordered text-center">
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Date Created</td>
            <td>Actions</td>
        </tr>
        @foreach (Category category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreatedTime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" asp-controller="Category" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" asp-controller="Category" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}